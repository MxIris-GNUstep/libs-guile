prefix = @prefix@
infodir=$(prefix)/info
mandir = $(prefix)/man
man1dir = $(mandir)/man1

INSTALL_DATA = install -m 644
TEXI2HTML=@TEXI2HTML@
TEXI2DVI=@TEXI2DVI@
MAKEINFO=@MAKEINFO@

all: gregdoc.info gregdoc.html gregdoc.dvi

gregdoc.texi:
	@echo "You must run ../configure before building the documentation!"

# We use a `-' so that if any of the following fails, that won't
# prevent people from installing Greg anyway

gregdoc.dvi: gregdoc.texi
	-$(TEXI2DVI) gregdoc.texi

gregdoc.html: gregdoc.texi
	-$(TEXI2HTML) -monolithic -expandinfo gregdoc.texi

gregdoc.info: gregdoc.texi
	-$(MAKEINFO) -D NO-TEXI2HTML -o gregdoc.info gregdoc.texi

install-info: gregdoc.info
	../mkinstalldirs $(INSTALL_ROOT_DIR)$(infodir)
	-install-info --quiet -r Greg $(INSTALL_ROOT_DIR)$(infodir)/dir
	-install-info gregdoc.info $(INSTALL_ROOT_DIR)$(infodir)/dir
	-$(INSTALL_DATA) gregdoc.info $(INSTALL_ROOT_DIR)$(infodir)/greg.info

install: install-info
	../mkinstalldirs $(INSTALL_ROOT_DIR)$(man1dir)
	-rm -f $(INSTALL_ROOT_DIR)$(man1dir)/greg.1
	-$(INSTALL_DATA) greg.1 $(INSTALL_ROOT_DIR)$(man1dir)/greg.1
	-chmod a-x $(INSTALL_ROOT_DIR)$(man1dir)/greg.1

clean:
	rm -f gregdoc.aux gregdoc.cp gregdoc.cps gregdoc.dvi \
	      gregdoc.fn gregdoc.ky gregdoc.log gregdoc.pg \
	      gregdoc.toc gregdoc.tp gregdoc.vr gregdoc.html gregdoc.info

distclean: clean
	rm -f gregdoc.texi Makefile
