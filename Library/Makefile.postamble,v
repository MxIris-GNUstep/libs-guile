# Things to do after installing
after-install::
	if [ "$(shared)" = "yes" ]; then \
	    ( DIRP=`guile -c '(display (string-append (%package-data-dir) "/" (version)))'`; \
	      if [ ! -d $$DIRP/languages ]; then mkdir $$DIRP/languages; fi; \
	      $(INSTALL_PROGRAM) gstep-guile.scm $$DIRP/languages/gstep-guile.scm; \
	      if [ ! -d $$DIRP/languages/gstep-guile ]; then mkdir $$DIRP/languages/gstep-guile; fi; \
	      for i in $(LIBRARY_NAME); do \
		$(INSTALL_PROGRAM) $(GNUSTEP_OBJ_DIR)/$${i}$(LIBRARY_NAME_SUFFIX).so $$DIRP/languages/gstep-guile/$${i}.so; \
		$(INSTALL_PROGRAM) $(GNUSTEP_OBJ_DIR)/libgstep_guile$(LIBRARY_NAME_SUFFIX).so $$DIRP/languages/gstep-guile/libcompiled.so; \
	      done \
	    ) \
	fi

